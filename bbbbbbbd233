    Enabled = false,
    TeamCheck = true,
    AliveCheck = true,
    WallCheck = true,
    OffsetToMoveDirection = false,
    OffsetIncrement = 15,
    Sensitivity = 0,
    Sensitivity2 = 3.5,
    LockMode = 1,
    LockPart = "Head",
    TriggerKey = Enum.UserInputType.MouseButton2,
    Toggle = false,
    FOVRadius = 90,
    FOVVisible = true
}

